<div class="top-bar">
  <div class="wall-title">My Love Wall ❤️</div>

  <%= link_to "＋ Add Note",
    new_wall_paper_path,
    data: { turbo_frame: "modal" },
    class: "add-note-btn" %>

  <%= link_to "Logout",
      destroy_user_session_path,
      data: { turbo_method: :delete },
      class: "logout-btn" %>
</div>

<div class="wall-container">
  <% @papers.each do |paper| %>
    <div
      class="paper"
      data-controller="paper"
      data-paper-x-value="<%= paper.x || 0 %>"
      data-paper-y-value="<%= paper.y || 0 %>">

      <div class="paper-inner">
        <%= paper.content %>
      </div>

    </div>
  <% end %>
</div>
